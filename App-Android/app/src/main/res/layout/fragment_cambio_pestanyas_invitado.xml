<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/verde_boton"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintHeight_default="wrap"
    android:layout_gravity="bottom"
    tools:context=".CambioPestanyasInvitado">


    <ImageButton
        android:id="@+id/btnPerdidos"
        android:layout_width="78dp"
        android:layout_height="61dp"
        android:background="@color/verde_fondo2"
        android:contentDescription="Botón de Perdidos"
        android:scaleType="fitCenter"
        android:src="@drawable/lost"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/btnAbandonados"
        android:layout_width="78dp"
        android:layout_height="61dp"
        android:background="@color/verde_fondo2"
        android:contentDescription="Botón de Abandonados"
        android:scaleType="fitCenter"
        android:src="@drawable/abandonado"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="197dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/verde_fondo2"
        android:text="LOGGEARSE"
        android:textColor="@color/verde_fondo"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.108"
        app:layout_constraintStart_toEndOf="@+id/btnPerdidos"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>