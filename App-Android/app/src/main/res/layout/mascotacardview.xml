<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="6dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Imagen de la mascota -->
        <ImageView
            android:id="@+id/imgMascota"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/pinguinoilerna" />

        <!-- ID -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: "
                android:textStyle="bold"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/textMascotaId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Nombre -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre: "
                android:textStyle="bold"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/textMascotaNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Firulais"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Tipo -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo: "
                android:textStyle="bold"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/textMascotaTipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perro"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Raza -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Raza: "
                android:textStyle="bold"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/textMascotaRaza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Labrador"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Chip -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chip: "
                android:textStyle="bold"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/textMascotaChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SÃ­"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Vacunas -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vacunas: "
                android:textStyle="bold"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/textMascotaVacunas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rabia, Parvovirus"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnEditar"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/verde_boton"
                android:text="EDITAR"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnEliminar"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/verde_boton"
                android:text="ELIMINAR"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>