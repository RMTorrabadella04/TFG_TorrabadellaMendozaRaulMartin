<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="6dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nombre -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre: "
                android:textStyle="bold"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/textVeterinarioNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Veterinaria Central"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Dirección -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dirección: "
                android:textStyle="bold"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/textVeterinarioDireccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Av. Salud Animal 456"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Teléfono -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teléfono: "
                android:textStyle="bold"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/textVeterinarioTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="611456789"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correo: "
                android:textStyle="bold"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/textVeterinarioEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="veterinario@central.com"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Puede operar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puede operar: "
                android:textStyle="bold"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/textVeterinarioPuedeOperar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sí"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Botón -->
        <Button
            android:id="@+id/btnEliminarVeterinario"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/verde_boton"
            android:text="ELIMINAR"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
