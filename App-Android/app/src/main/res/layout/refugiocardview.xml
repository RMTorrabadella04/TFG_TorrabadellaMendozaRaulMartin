<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="6dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nombre -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre: "
                android:textStyle="bold"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/textRefugioNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refugio Esperanza"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Dirección -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dirección: "
                android:textStyle="bold"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/textRefugioDireccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calle Falsa 123"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Teléfono -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teléfono: "
                android:textStyle="bold"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/textRefugioTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="600123123"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Email -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correo: "
                android:textStyle="bold"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/textRefugioEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="refugio@esperanza.com"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Capacidad -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capacidad: "
                android:textStyle="bold"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/textRefugioCapacidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Botón -->
        <Button
            android:id="@+id/btnEliminarRefugio"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/verde_boton"
            android:text="ELIMINAR"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
