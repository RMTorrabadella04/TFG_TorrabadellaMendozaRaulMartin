<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/verde_boton"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintHeight_default="wrap"
    android:layout_gravity="bottom"
    tools:context=".CambioDePestanyas">

    <ImageButton
        android:id="@+id/btnCentro"
        android:layout_width="78dp"
        android:layout_height="61dp"
        android:background="@color/verde_fondo2"
        android:contentDescription="Botón de Centro"
        android:scaleType="fitCenter"
        android:src="@drawable/centro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/btnPerdidos"
        android:layout_width="78dp"
        android:layout_height="61dp"
        android:background="@color/verde_fondo2"
        android:contentDescription="Botón de Perdidos"
        android:scaleType="fitCenter"
        android:src="@drawable/lost"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.250"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/btnMascotas"
        android:layout_width="78dp"
        android:layout_height="61dp"
        android:background="@color/verde_fondo2"
        android:contentDescription="Botón de Mascotas"
        android:scaleType="fitCenter"
        android:src="@drawable/mascota"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/btnAbandonados"
        android:layout_width="78dp"
        android:layout_height="61dp"
        android:background="@color/verde_fondo2"
        android:contentDescription="Botón de Abandonados"
        android:scaleType="fitCenter"
        android:src="@drawable/abandonado"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/btnChats"
        android:layout_width="78dp"
        android:layout_height="61dp"
        android:background="@color/verde_fondo2"
        android:contentDescription="Botón de Chats"
        android:scaleType="fitCenter"
        android:src="@drawable/chat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.993"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>
