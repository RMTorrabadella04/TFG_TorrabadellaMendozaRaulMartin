<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_green_background"
    tools:context=".RegistroActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="254dp"
        android:layout_height="257dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.145"
        app:srcCompat="@drawable/logosinfondo" />

    <EditText
        android:id="@+id/nombre"
        android:layout_width="281dp"
        android:layout_height="48dp"
        android:hint=" Nombre"
        android:background="@color/amarillo_fondo"
        android:textSize="18sp"
        android:textStyle="bold"
        android:inputType="text"
        android:paddingStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/registro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.191" />

    <EditText
        android:id="@+id/email"
        android:layout_width="281dp"
        android:layout_height="48dp"
        android:background="@color/amarillo_fondo"
        android:hint=" Email"
        android:inputType="text"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/registro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombre"
        app:layout_constraintVertical_bias="0.265" />

    <EditText
        android:id="@+id/password"
        android:layout_width="281dp"
        android:layout_height="48dp"
        android:background="@color/amarillo_fondo"
        android:hint=" ContraseÃ±a"
        android:inputType="text"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/registro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email"
        app:layout_constraintVertical_bias="0.457" />

    <Button
        android:id="@+id/registro"
        android:layout_width="222dp"
        android:layout_height="67dp"
        android:backgroundTint="@color/verde_boton"
        android:text="REGISTRARSE"
        android:textColor="@color/verde_fondo"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.958" />
</androidx.constraintlayout.widget.ConstraintLayout>